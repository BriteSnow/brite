<script id="tmpl-ProjectView" type="text/html">
  <div class="ProjectView">
    <div class="card">
      <div class="card-face card-front">
        <header>
          <div class="header-fav"><i class="{{if project.isFav}}icon-star{{else}}icon-star-empty{{/if}}" style="opacity:.5"></i></div>
          <h2>{{: project.title}}</h2>
          <div class="header-setting" data-action='editMode'><i class="icon-cog" style="opacity:.5"></i></div>
        </header>
        <section class="content">
          <div class="ProjectView-taskTable">
            <div class="table-header">
              <table class="table ">
                <thead>
                  <tr>
                    <th class="check"></th>
                    <th class="title">Title</th>
                  </tr>
                </thead>
              </table>
              <div class="del"><i class="icon-trash"></i></div>
            </div>
            <div class="table-content">      
              {{for #data tmpl="#tmpl-ProjectView-taskTable-content" /}}
            </div>
          </div>
        </section>
      </div> <!-- /.card-front -->
      
      <div class="card-face card-back">
        
      </div>
    </div> <!-- /.card -->
  </div>
</script>


<script id="tmpl-ProjectView-taskTable-content" type="text/html">
  <table class="table">
    <tbody>
      {{for tasks}}
      <tr data-entity="Task" data-entity-id="{{:id}}" {{if done}}class="done"{{/if}}>
        <td class="check"><input data-prop="done" type="checkbox" {{if done}}checked="checked"{{/if}}/>
          <i class="icon-ban-circle"></i>
        </td>
        <td class="title"><input data-prop="title" value="{{:title}}" /></td>
      </tr>
      {{/for}}
      
      <tr class="newTask">
        <td class="check"></td>
        <td class="title">
          <input data-prop="title" placeholder="Enter new task" type="input" />
        </td>
      </tr>
    </tbody>
  </table>
</script>

<script id="tmpl-ProjectView-delControls" type="text/html">
  <div class="delete-controls">
    <div class="delete-controls-inner">
      <div class="btn btn-small btn-danger" data-action="delete">Delete (0)</div>
      <div class="btn btn-small" data-action="cancel">Cancel</div>
    </div>
  </div>
</script>